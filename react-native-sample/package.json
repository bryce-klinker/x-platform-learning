{
  "name": "react-native-sample",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "babel-preset-react-native-stage-0": "1.0.1",
    "babel-register": "6.26.0",
    "detox": "7.3.4",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.19.1",
    "express": "4.16.3",
    "husky": "0.14.3",
    "jest": "22.4.3",
    "jest-fetch-mock": "1.5.0",
    "jest-react-native": "18.0.0",
    "morgan": "1.9.0",
    "prettier": "1.12.1",
    "pretty-quick": "1.4.1",
    "react-dom": "16.3.1",
    "react-test-renderer": "16.3.1"
  },
  "scripts": {
    "precommit": "pretty-quick --staged",
    "start": "react-native start",
    "start:mock-api": "node ./mock-api.js",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "lint": "prettier --write index.js testing/**/*.js src/**/*.js",
    "pree2e:ios": "detox build -c ios.sim.debug",
    "e2e:ios": "detox test -c ios.sim.debug",
    "pree2e:android": "./scripts/setup-android-e2e.sh",
    "e2e:android": "./scripts/execute-android-e2e-tests.sh",
    "e2e": "yarn e2e:ios && yarn e2e:android"
  },
  "jest": {
    "preset": "react-native",
    "testMatch": ["<rootDir>/src/**/?(*.)(spec|test).js?(x)"],
    "transformIgnorePatterns": ["/node_modules/(?!native-base)/"],
    "setupFiles": ["./testing/index.js"]
  },
  "dependencies": {
    "native-base": "2.4.2",
    "react": "16.3.1",
    "react-native": "0.55.3",
    "react-navigation": "2.0.0-rc.9"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "e2e/config.json",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath":
          "ios/build/Build/Products/Debug-iphonesimulator/footy.app",
        "build":
          "xcodebuild -project ios/footy.xcodeproj -scheme footy -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      },
      "android.sim.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build":
          "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.attached",
        "name": "e2e-emulator"
      }
    }
  }
}
